<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileClient.UI.Pages.LinkPage"
             Title="LinkPage">
    <VerticalStackLayout>
    <Button Clicked="SaveButtonClickAsync" Text="Save" WidthRequest="100" HorizontalOptions="Start" />


    <CollectionView ItemsSource="{Binding Links}">
            <CollectionView.Header>
                <Label Text= "Список" FontSize="18" FontAttributes="Bold" />
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
            <DataTemplate>
                    <VerticalStackLayout Padding="20"
     Spacing="10"
     VerticalOptions="StartAndExpand">
                        <Label Grid.Column="1"
        Text="{Binding ProviderID}"
        FontAttributes="Bold" />
                        <Label Grid.Row="1"
        Grid.Column="1"
        Text="{Binding ExternalID}"
        FontAttributes="Italic"
        VerticalOptions="End" />
                        <Label Grid.Row="1"
        Grid.Column="1"
        Text="{Binding InternalID}"
        FontAttributes="Italic"
        VerticalOptions="End" />
                    </VerticalStackLayout>
                </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
    </VerticalStackLayout>
</ContentPage>