<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileClient.UI.Pages.BasketPage"
             Title="BasketPage">
    <VerticalStackLayout>
        <Button Clicked="SaveButtonClickAsync" Text="Save" WidthRequest="100" HorizontalOptions="Start" />


        <CollectionView ItemsSource="{Binding Products}" x:Name="listView">
            <CollectionView.Header>
                <Label Text= "Список" FontSize="18" FontAttributes="Bold" />
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="20"
                         Spacing="10"
                         VerticalOptions="StartAndExpand">
                        <Label Grid.Column="1"
                            Text="{Binding Product.Item.Name}"
                            FontAttributes="Bold" />
                        <Label Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding Product.Provider.Name}"
                            FontAttributes="Italic"
                            VerticalOptions="End" />
                        <Label Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding Quantity}"
                            FontAttributes="Italic"
                            VerticalOptions="End" />
                        <Button Text="+" 
                            Command="{Binding Source={x:Reference listView},
                            Path=BindingContext.AddCommand}"
                            CommandParameter="{Binding}"/>
                        <Button Text="-" 
                            Command="{Binding Source={x:Reference listView},
                            Path=BindingContext.RemoveCommand}"
                            CommandParameter="{Binding}"/>
                        <Button Text="Remove" 
                            Command="{Binding Source={x:Reference listView},
                            Path=BindingContext.DeleteCommand}"
                            CommandParameter="{Binding}"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>