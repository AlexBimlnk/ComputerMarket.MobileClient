<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileClient.UI.Pages.LoginPage"
             Title="LoginPage">
    <StackLayout Orientation="Vertical">
        <Entry x:Name="emailEntry" Margin="5" Placeholder = "Enter email" />
        <Entry x:Name="passwordEntry" Margin="5" Placeholder = "Enter password" />
        <Button Clicked="SaveButtonClickedAsync" Text="Save" WidthRequest="100" HorizontalOptions="Start" />
    </StackLayout>
</ContentPage>