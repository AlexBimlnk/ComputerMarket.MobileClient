<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileClient.UI.Pages.FilterPage"
             Title="FilterPage">
    <StackLayout Orientation="Vertical">
        <Entry x:Name="searchEntry" Margin="5" Placeholder = "{Binding Catalog.SearchString}"/>
        <Button Clicked="OpenButtonClickAsync" Text="Save" WidthRequest="100" HorizontalOptions="Start" />
    </StackLayout>
</ContentPage>