<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MobileClient.Contract;assembly=MobileClient.Contract"
             x:Class="MobileClient.UI.Pages.ProductPage"
             Title="ProductPage"
             x:DataType="models:Product"
             >
    <ScrollView>
        <VerticalStackLayout Padding="20"
                         Spacing="10"
                         VerticalOptions="StartAndExpand">
            <Image Grid.RowSpan="3"
Source="{Binding Item.URL}"
Aspect="AspectFill"
HeightRequest="60"
WidthRequest="60" />
            <Label Grid.Column="1"
Text="{Binding Item.Name}"
FontAttributes="Bold" />
            <Label Grid.Row="1"
Grid.Column="1"
Text="{Binding Provider.Name}"
FontAttributes="Italic"
VerticalOptions="End" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>