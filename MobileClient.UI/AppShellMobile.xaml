<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:p="clr-namespace:MobileClient.UI.Pages.Handheld"
             xmlns:pages="clr-namespace:MobileClient.UI.Pages"
             x:Class="MobileClient.UI.AppShellMobile"
             Title="AppShellMobile">
    <ShellContent Title="Login" Route="Login">
        <pages:LoginPage />
    </ShellContent>
    <TabBar>
        <ShellContent Title="Главная" Route="home"
                     
                     ContentTemplate="{DataTemplate pages:HomePageView}" />
        <ShellContent Title="Каталог" Route="catalog"
             
             ContentTemplate="{DataTemplate pages:CatalogPageView}" />
        <ShellContent Title="Корзина" Route="basket"
             
             ContentTemplate="{DataTemplate pages:BasketPageView}" />
        <ShellContent Title="Профиль" Route="profile"
                     
                     ContentTemplate="{DataTemplate pages:ProfilePageView}" />
    </TabBar>
</Shell>
