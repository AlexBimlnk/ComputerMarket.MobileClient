<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:MobileClient.UI.Pages"
       xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
       xmlns:v="clr-namespace:MobileClient.UI.Pages.Views"
       x:Class="MobileClient.UI.AppShell">



    <TabBar>
        <ShellContent Title="Home"
                 
                 ContentTemplate="{DataTemplate pages:HomePage}"/>
        <ShellContent Title="Catalog"
         
         ContentTemplate="{DataTemplate pages:CatalogPage}" />
        <ShellContent Title="Basket"
         
         ContentTemplate="{DataTemplate pages:BasketPage}" />
        <ShellContent Title="Profile"
                 
                 ContentTemplate="{DataTemplate pages:ProfilePage}" />
    </TabBar>
</Shell>
